<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/337437c9ab.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-house mr-2"></i>
                  <%= link_to "Home", user_path(current_user), class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-users mr-2"></i>
                  <%= link_to "Users", users_path, class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-book-open mr-2"></i>
                  <%= link_to "Books", books_path, class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-right-from-bracket mr-2"></i>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark mb-0' %>
                </li>
              <% else %>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-house mr-2"></i>
                  <%= link_to "Home", "/", class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-link mr-2"></i>
                  <%= link_to "About", about_path, class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-user-plus mr-2"></i>
                  <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark mb-0' %>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fa-solid fa-right-to-bracket"></i>
                  <%= link_to "Log in", new_user_session_path, class: 'nav-link text-dark mb-0' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
  </body>
</html>
