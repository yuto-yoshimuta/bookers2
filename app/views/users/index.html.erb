<%= render 'flash' %>

<div class="container mt-4">
  <div class="row">
    <!-- 左側のカラム -->
    <div class="col-md-3">
      <%= render partial: 'user_info', locals: { user: nil } %>
      <%= render 'books/book_form', book: @book %>
    </div>
    <!-- 右側のカラム -->
    <div class="col-md-8 offset-md-1">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Users</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">image</th>
                <th scope="col">name</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id), class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
